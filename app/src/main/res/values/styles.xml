        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_margin">@dimen/border</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/text_row_delivery</item>
        <item name="android:paddingTop">@dimen/text_row_delivery</item>
