    <style name="DateHeader">
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LayoutTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/rowHeight</item>
        <item name="android:layout_margin">@dimen/border</item>
        <item name="android:background">@color/color_bg_title</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CodeFontRowNew_Child_Order">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_marginTop">@dimen/border</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
