    <declare-styleable name="CustomTextView">
        <attr name="font" format="string" />
    </declare-styleable>

    <style name="Button">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="Row_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|right</item>
    </style>


    <style name="TextBoxInPut">
        <item name="android:layout_width">@dimen/width_iniput</item>
        <item name="android:layout_height">@dimen/height_iniput</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLength">3</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/round_date</item>


    </style>

</resources>
