<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:screenOrientation">portrait</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CodeFontTextNoLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:layout_marginTop">@dimen/border</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/title_menu</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/mg_left_title</item>
    </style>

    <style name="CodeFontText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_margin">@dimen/border</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/title_menu</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/mg_left_title</item>
    </style>

    <style name="CodeFontTextNew">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_marginTop">@dimen/border</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/title_menu</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">@dimen/mg_left_title</item>
    </style>

    <style name="CodeFont">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_margin">@dimen/border</item>
        <item name="android:textColor">@color/holo_red_light</item>
        <item name="android:background">@color/color_bg_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CodeFontRowChild">
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_marginTop">@dimen/border</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/fab_margin</item>
        <item name="android:paddingTop">@dimen/fab_margin</item>
    </style>

    <style name="CodeFontRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:layout_marginBottom">@dimen/border</item>
