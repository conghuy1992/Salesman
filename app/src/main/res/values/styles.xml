    <style name="CodeFontRowForClose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CodeFontRowDelivery">
        <item name="android:textSize">@dimen/text_row</item>
        <item name="android:layout_margin">@dimen/border</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/text_row_delivery</item>
